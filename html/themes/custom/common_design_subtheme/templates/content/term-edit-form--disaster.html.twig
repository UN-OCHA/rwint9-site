{#
/**
 * @file
 * Theme override for a node edit form.
 *
 * Two column template for the node add/edit form.
 *
 * This template will be used when a node edit form specifies 'node_edit_form'
 * as its #theme callback.  Otherwise, by default, node add/edit forms will be
 * themed by form.html.twig.
 *
 * Available variables:
 * - form: The node add/edit form.
 *
 * @see seven_form_node_form_alter()
 */
#}
{% set attributes = attributes
  .setAttribute('data-cd-toggable', 'Jump to content'|t)
  .setAttribute('data-cd-icon', 'arrow-down')
  .setAttribute('data-cd-component', 'rw-toc')
%}

{% set title_attributes = title_attributes.addClass('visually-hidden') %}

{{ attach_library('common_design_subtheme/rw-form') }}
{{ attach_library('common_design_subtheme/rw-toc') }}

<nav{{ attributes
  .setAttribute('id', id)
.addClass([
  'rw-toc',
])
}} >
  <h2{{ level }}{{ title_attributes
    .addClass([
      'rw-toc__title'
    ])
  }}>{% trans %}Table of Contents{% endtrans %}</h2>
  <ul>
    <li class="rw-toc__section">
      <h3 class="rw-toc__section__title">{% trans %}Fields{% endtrans %}</h3>
      <ul>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#name">{% trans %}Name{% endtrans %}</a></li>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#countries">{% trans %}Countries{% endtrans %}</a></li>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#disaster-types">{% trans %}Disaster types{% endtrans %}</a></li>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#date">{% trans %}Event date{% endtrans %}</a></li>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#profile">{% trans %}Profile{% endtrans %}</a></li>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#glide">{% trans %}GLIDE{% endtrans %}</a></li>
      </ul>
    </li>
    <li class="rw-toc__section">
      <h3 class="rw-toc__section__title">{% trans %}Submission{% endtrans %}</h3>
      <ul>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#editorial-flags">{% trans %}Editorial flags{% endtrans %}</a></li>
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#actions">{% trans %}Save{% endtrans %}</a></li>
        {#        <?php if (!empty($form['revision_information'])): ?>#}
        <li class="rw-toc__sub_section"><a class="rw-toc__sub_section__link" href="#edit-revision-information">{% trans %}Revisions{% endtrans %}</a></li>
        {#        <?php endif; ?>#}
      </ul>
    </li>
  </ul>
</nav>

<fieldset id="name">
  <legend>{% trans %}Name{% endtrans %}</legend>
  {{ form.field_shortname }}
</fieldset>

<fieldset id="countries">
  <legend>{% trans %}Countries{% endtrans %}</legend>
  {{ form.field_country }}
  {{ form.field_primary_country }}
</fieldset>

<fieldset id="disaster-types">
  <legend>{% trans %}Disaster types{% endtrans %}</legend>
  {{ form.field_disaster_type }}
  {{ form.field_primary_disaster_type }}
</fieldset>

<fieldset id="date">
  <legend>{% trans %}Event date{% endtrans %}</legend>
  {{ form.field_disaster_date }}
</fieldset>

<fieldset id="profile">
  <legend>{% trans %}Profile{% endtrans %}</legend>
  {{ form.body }}
</fieldset>

<fieldset id="glide">
  <legend>{% trans %}GLIDE{% endtrans %}</legend>
  {{ form.field_glide }}
  {{ form.field_glide_related }}
</fieldset>

<fieldset id="editorial-flags">
  <legend class="accessibility">{% trans %}Editorial flags{% endtrans %}</legend>
  {{ form.field_profile }}
  {{ form.field_timezone }}
</fieldset>

<fieldset id="actions">
  <legend class="accessibility">{% trans %}Form submission and other actions{% endtrans %}</legend>
  {#  <?php print $actions; ?>#}
</fieldset>
