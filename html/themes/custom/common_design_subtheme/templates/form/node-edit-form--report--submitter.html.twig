{#
/**
 * @file
 * Theme override for a node edit form.
 *
 * This template will be used when a node edit form specifies 'node_edit_form'
 * as its #theme callback.  Otherwise, by default, node add/edit forms will be
 * themed by form.html.twig.
 *
 * Available variables:
 * - form: The node add/edit form.
 *
 * @see seven_form_node_form_alter()
 *
 * @todo review revision section.
 */
#}
{{ attach_library('common_design_subtheme/rw-form') }}

{{ form.header_instructions }}

<fieldset id="content" class="rw-form-fieldset">
  <legend class="visually-hidden">{% trans %}Content{% endtrans %}</legend>
  {{ form.title }}
  {{ form.field_country }}
  {{ form.field_primary_country }}
  {{ form.field_source }}
  {{ form.field_language }}
  {{ form.field_original_publication_date }}
  {{ form.field_file }}
</fieldset>

<fieldset id="actions">
  <legend class="visually-hidden">{% trans %}Form submission and other actions{% endtrans %}</legend>
  {{ form.actions|without(['preview']) }}
  {{ form.buttons_description }}
</fieldset>

{{ form.footer_instructions }}

{{
  form|without([
    'header_instructions',
    'footer_instructions',
    'title',
    'field_country',
    'field_primary_country',
    'field_source',
    'field_language',
    'field_file',
    'field_original_publication_date',
    'field_origin',
    'field_origin_notes',
    'field_notify',
    'actions',
    'buttons_description',
    'revision_information',
    'advanced',
    'path'
  ])
}}
