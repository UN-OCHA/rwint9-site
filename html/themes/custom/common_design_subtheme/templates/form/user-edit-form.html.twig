{#
/**
 * @file
 * Theme override for the user form content.
 *
 * This template will be used when a user edit form specifies
 * 'user_edit_form' as its #theme callback.  Otherwise, by default,
 * the user add/edit forms will be themed by form.html.twig.
 *
 * Available variables:
 * - form: The user add/edit form.
 *
 * @see common_design_subtheme_form_user_form_alter()
 *
 */
#}
{{ attach_library('common_design_subtheme/rw-form') }}
{{ attach_library('common_design_subtheme/rw-user') }}

{# Form content. #}
<fieldset id="account">
  <legend>{% trans %}Account information{% endtrans %}</legend>
  {{ form.account.name }}
  {{ form.display_name }}
  {{ form.account.mail }}
  {{ form.field_email_confirmed }}
  {{ form.account.current_pass }}
  {{ form.account.pass }}
  {{ form.account.reset_pass }}
</fieldset>

{% if form.account.status['#access'] != false %}
<fieldset id="details" class="details">
  <legend>{% trans %}Account status and notes{% endtrans %}</legend>
  {{ form.account.status }}
  {{ form.account.roles }}
  {{ form.field_notes }}
</fieldset>
{% endif %}

<fieldset id="actions">
  <legend class="visually-hidden">{% trans %}Form submission and other actions{% endtrans %}</legend>
  {{ form.actions }}
</fieldset>

{{
  form.account|without([
    'name',
    'current_pass',
    'mail',
    'pass',
    'reset_pass',
    'status',
    'roles',
  ])
}}

{{
  form|without([
    'account',
    'field_notes',
    'actions',
    'display_name',
    'field_email_confirmed',
  ])
}}
