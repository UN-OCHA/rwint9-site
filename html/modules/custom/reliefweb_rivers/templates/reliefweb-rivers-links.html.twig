{#

/**
 * @file
 * Template for the river links.
 *
 * Available variables:
 * - level: heading level for the section
 * - attributes: section attributes
 * - title: section title
 * - title_attributes: title attributes
 * - links: The API/RSS links for the river.
 */

#}
{% if links is not empty %}
<section{{ attributes.addClass('rw-river-links') }}>
  <h{{ level }}{{ title_attributes.addClass('visually-hidden') }}>{{ title }}</h{{ level }}>
  <ul class="rw-river-links__list">
  {%- for key, link in links -%}
    <li class="rw-river-links__list__item rw-river-links__list__item--{{ key|clean_class }}">{{ link }}</li>
  {%- endfor -%}
  </ul>
</section>
{% endif %}
