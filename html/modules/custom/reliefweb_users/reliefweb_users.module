/**
 * Implements hook_theme().
 */
function reliefweb_users_theme() {
  $themes = [
    'reliefweb_users_page' => [
      'variables' => [
        // Filters form.
        'filters' => NULL,
        // Attributes for the filters.
        'filters_attributes' => NULL,
        // List of users.
        'list' => NULL,
        // Attributes for the list.
        'list_attributes' => NULL,
